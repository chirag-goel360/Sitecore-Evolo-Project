@using Sitecore.Data.Items
@using Sitecore.Data
@using Sitecore.Mvc.Presentation
@using Sitecore.Mvc
@model EvolvoBestPractice.Models.Pricing

<!-- Pricing -->
<div id="pricing" class="cards-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2>@Model.Title()</h2>
                <div class="p-heading p-large">
                    @Html.Raw(Model.Description())
                </div>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">
                <!-- Card-->
                @foreach (var val in Model.fetchPricing())
                {
                    <div class="card">
                        <div class="card-body">
                            <div class="card-title">@val.Title</div>
                            <div class="card-subtitle">@val.Sub_Title</div>
                            <hr class="cell-divide-hr">
                            <div class="price">
                                <span class="currency">$</span><span class="value">@val.Price</span>
                                <div class="frequency">monthly</div>
                            </div>
                            <hr class="cell-divide-hr">
                            <ul class="list-unstyled li-space-lg">
                                @if (val.Improve_Your_Email_Marketing)
                                {
                                    <li class="media">
                                        <i class="fas fa-check"></i><div class="media-body">Improve Your Email Marketing</div>
                                    </li>
                                }
                                else
                                {
                                    <li class="media">
                                        <i class="fas fa-times"></i><div class="media-body">Improve Your Email Marketing</div>
                                    </li>
                                }
                                @if (val.User_And_Admin_Rights_Control)
                                {
                                    <li class="media">
                                        <i class="fas fa-check"></i><div class="media-body">User And Admin Rights Control</div>
                                    </li>
                                }
                                else
                                {
                                    <li class="media">
                                        <i class="fas fa-times"></i><div class="media-body">User And Admin Rights Control</div>
                                    </li>
                                }
                                @if (val.List_Building_And_Cleaning)
                                {
                                    <li class="media">
                                        <i class="fas fa-check"></i><div class="media-body">List Building And Cleaning</div>
                                    </li>
                                }
                                else
                                {
                                    <li class="media">
                                        <i class="fas fa-times"></i><div class="media-body">List Building And Cleaning</div>
                                    </li>
                                }
                                @if (val.Collected_Data_Management)
                                {
                                    <li class="media">
                                        <i class="fas fa-check"></i><div class="media-body">Collected Data Management</div>
                                    </li>
                                }
                                else
                                {
                                    <li class="media">
                                        <i class="fas fa-times"></i><div class="media-body">Collected Data Management</div>
                                    </li>
                                }
                                @if (val.More_Planning_And_Evaluation)
                                {
                                    <li class="media">
                                        <i class="fas fa-check"></i><div class="media-body">More Planning And Evaluation</div>
                                    </li>
                                }
                                else
                                {
                                    <li class="media">
                                        <i class="fas fa-times"></i><div class="media-body">More Planning And Evaluation</div>
                                    </li>
                                }
                            </ul>
                            <div class="button-wrapper">
                                <a class="btn-solid-reg page-scroll" href="@val.Request">@val.Button_Text</a>
                            </div>
                        </div>
                    </div> <!-- end of card -->
                    <!-- end of card -->
                }
            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of cards-2 -->
<!-- end of pricing -->